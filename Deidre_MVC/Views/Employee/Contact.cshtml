@{
    ViewData["Title"] = "Contact";
}
<div class="container-fluid" style="text-align: center; background: #8080803b;">
    <img class="img-fluid" src="~/img/employee_contact.jpg" />
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                <form class="form-horizontal" action="" method="post">
                    <fieldset>
                        <legend class="text-center">Contact Employers Web</legend>

                        <!-- Name input-->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-users"></i></span>
                            </div>
                            <input id="name" name="name" type="text" placeholder="Your name" class="form-control">
                        </div>
                        <!-- Email input-->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope-square"></i></span>
                            </div>
                            <input id="email" name="email" type="text" placeholder="Your email" class="form-control">
                        </div>
                        <!-- Message body -->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="far fa-sticky-note"></i></span>
                            </div>
                            <textarea class="form-control" id="message" name="message" placeholder="Please enter your message here..." rows="5"></textarea>
                        </div>

                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-left">
                                <button type="submit" class="btn btn-primary btn-lg">Send E-mail</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
